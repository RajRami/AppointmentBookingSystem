<h1>Edit an Appointment</h1>
<form method="post">
    <fieldset>
        <label for="name" class="col-2">Name:*</label>
        <input name="name" id="Name" placeholder="Enter Your Name" value="{{appointment.name}}" required>
    </fieldset>
    <fieldset>
        <label for="email" class="col-2">Email:*</label>
        <input type="email" name="email" id="email" placeholder="Enter Your Email" value="{{appointment.email}}" required>
    </fieldset>
    <fieldset>
        <label for="date" class="col-2">Date:*</label>
        <input type="date" name="date" id="date" value="{{appointment.date}}" required>
    </fieldset>
    <fieldset>
        <label for="reason" class="col-2">Reason:*</label>
        <select name="reason" id="reason" required>
            <option selected>{{appointment.reason}}</option>
            <option value="Checkup">Checkup</option>
            <option value="Follow-Up">Follow-Up</option>
            <option value="Emergency">Emergency</option>
        </select>
    </fieldset>
    <fieldset>
        <label for="confirmed" class="col-2">Confirmed:</label>
        {{!-- {{setChecked this.confirmed ../appointment.confirmed}} --}}
        <input type="checkbox" name="confirmed" id="confirmed">
    </fieldset>
    <button class="btn btn-primary offset-2">Update</button>
</form>